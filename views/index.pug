extends layout

block content
  .container.py-4.h-100
    .row.justify-content-center.h-100
      .col-lg-10
        .card.h-100
          .card-header
            .row
              .col-md-2
                h6 Model
                select#model-selector.form-control
                  option(value="gpt-35-turbo") gpt-3.5-turbo
                  option(value="gpt-35-turbo-16k") gpt-3.5-turbo-16k
                  option(value="gpt-4") gpt-4
                  option(value="gpt-4-32k") gpt-4-32k
              .col-md-2
                h6 Token
                input#token-input.form-control(type='number', step='1', min='0', max='32768', placeholder='Token', value='500', onwheel='scrollValue(event)')
              .col-md-2
                h6 Temperature
                input#temperature-input.form-control(type='number', step='0.1', min='0', max='2', placeholder='Temperature', value='0.7', onwheel='scrollValue(event)')
              .col-md-2
                h6 Top P
                input#top-p-input.form-control(type='number', step='0.1', min='0', max='1', placeholder='Top P', value='1', onwheel='scrollValue(event)')
              .col-md-2
                h6 Frequency
                input#frequency-penalty-input.form-control(type='number', step='0.1', min='-2', max='2', placeholder='Frequency Penalty', value='0', onwheel='scrollValue(event)')
              .col-md-2
                h6 Presence
                input#presence-penalty-input.form-control(type='number', step='0.1', min='-2', max='2', placeholder='Presence Penalty', value='0', onwheel='scrollValue(event)')
          .card-body
            #chat-window.chat-window
              ul#chat
          .card-footer
            form#chat-form
              .row
                .col-lg-10
                  textarea#message-input.form-control(rows='3', placeholder='Type a message...')
                .col-lg-2.ml-auto.align-self-end
                  button#sendButton.btn.btn-primary(type='submit') Send
                  button#stopButton.btn.btn-danger(type='button', style='display: none;', disabled) Stop

  block scripts
    script(src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js")
    script(src="/javascripts/index.js")
